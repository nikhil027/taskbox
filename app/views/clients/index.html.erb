<div class="row">

<div class="col-md-7">
	<div class="page-header">
		<h2>Clients
	

<!-- new_client_path will return a string "/projects/new"-->
<div class="pull-right">
	<%#= link_to "Add Project", new_project_path , class:"btn btn-primary"%>

	<%=link_to new_client_path, class:"btn btn-primary" do%>
		<i class="glyphicon glyphicon-plus"></i>Add Client
	<%end%>

	<%=link_to clients_export_path(format:"xls"), class:"btn btn-info" do%>
		<i class="glyphicon glyphicon-download-alt"></i> Download
	<%end%>
</div>
</h2>
</div>
<hr>



<ol>
	<% @clients.each do |client| %>
		<li><%= client.name %> 
		 <%=link_to "Show", client_path(client.id)%>
		 	<%=link_to "Edit", edit_client_path(client)%>
		 	<%=link_to "Destroy", client_path(client.id), method: :delete, data: {confirm: "Are you sure ???"}%>
		 </li>
	<% end %>
</ol>

<% data = {} %>
<% @clients.each do |client|%>
	<%data[client.name] = client.projects.size %>
<%end%>	

<%= column_chart(data) %> 